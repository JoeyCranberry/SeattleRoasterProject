@typeparam Model

<table class="w-full table-fixed border-collapse rounded border border-neutral-600 bg-neutral-800 text-sm shadow-sm">
    <thead class="bg-neutral-700 text-xs uppercase">
        <tr>
            @GridHeader
        </tr>
    </thead>
    <tbody>
        @GridContent
    </tbody>
</table>

@code {
    [Parameter]
    public RenderFragment? GridHeader { get; set; }

    [Parameter]
    public RenderFragment? GridContent { get; set; }

    [Parameter]
    public IEnumerable<Model>? Data { get; set; }
}
