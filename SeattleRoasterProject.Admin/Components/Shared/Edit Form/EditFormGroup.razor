<div class="@Class">
    @if(Header != null)
    {
        <div class="mt-12 border-b border-purple-100 text-xl">
            @Header
        </div>
    }
    
    <div class="mb-4 grid gap-x-6 gap-y-2 @($"grid-cols-{Columns}") @ContentClass rounded-sm px-2 py-4">
        @ChildContent
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public RenderFragment? Header { get; set; }

    [Parameter]
    public int Columns { get; set; }

    [Parameter]
    public string Class { get; set; } = string.Empty;

    [Parameter]
    public string ContentClass { get; set; } = string.Empty;
}
