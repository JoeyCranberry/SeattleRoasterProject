@page "/test"
@using System.Diagnostics

@inject RoasterService roasterServ
@inject BeanService beanServ


<input value="@currentValue" @oninput="ChangedText"/>

@code {
    private string? currentValue;

    private void ChangedText(ChangeEventArgs args)
    {
        currentValue = args.Value.ToString();
        Debug.WriteLine("Value updated " + currentValue);

        if (currentValue.Length == 5)
        {
            currentValue += "SCREAMING!";
        }
    }

}