@if (Beans != null)
{
	<div class="row row-cols-1 row-cols-md-3 g-3">
		@foreach (BeanListing bean in Beans)
		{
			<div class="card">
				<div class="card-header">
					<h5 class="card-title">
						@bean.FullName
					</h5>
				</div>
				<div class="card-body">
					<div class="row">
						<div class="col-4 p-0 m-0">
							@if (!String.IsNullOrEmpty(bean.ImageURL))
							{
								<img src="@bean.ImageURL" class="rounded beansImage @bean.ImageClass" alt="@bean.FullName">
							}
						</div>
						<div class="col-8">
							@if (bean.CountriesOfOrigin != null)
							{
								<ul class="list-group">
									@foreach (Country country in bean.CountriesOfOrigin)
									{
										<li class="list-group-item">@country.ToString().ToLower()</li>
									}
								</ul>
							}
						</div>
					</div>
				</div>
				<div class="card-footer">
					<a href="@bean.ProductURL">Shop</a>
				</div>
			</div>
		}
	</div>
}

@code {
	[Parameter]
	public List<BeanListing>? Beans { get; set; }

	protected override void OnParametersSet()
	{
		if (Beans != null)
		{
			Beans.RemoveAll(l => l.IsExcluded);
		}
	}
}
