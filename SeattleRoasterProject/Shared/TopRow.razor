@inject EnviromentSettings envSettings
@inject IConfiguration config

<div class="top-row row mx-0">
	<div class="col-md-6 d-flex justify-content-start">
		<a href="/"><img src="/images/logo.png" alt="Project logo, a simple coffee bean deisgn" /></a>
		<div class="d-flex align-items-center">
			<a class="ms-2 navbar-brand" href="/"><h3 class="siteHeader">Seattle Roaster Project</h3></a>
		</div>
	</div>
	<div class="col-12 col-md-6 d-flex justify-content-end">
		<NavLink href="/beans" Match=@NavLinkMatch.All class="text-crema side-nav-link px-2 me-2"><span class="bi bi-search pe-1"></span> Search</NavLink>
		<NavLink href="/favorites" Match=@NavLinkMatch.All class="text-crema side-nav-link px-2 me-2"><span class="bi bi-heart-fill pe-1"></span> Favorites</NavLink>
		
		@if (curEnviroment == EnviromentSettings.Enviroment.DEVELOPMENT)
		{
			<NavLink Match=@NavLinkMatch.All href="/new-beans" class="text-crema side-nav-link px-2 me-2"><span class="bi bi-plus-circle-dotted pe-1"></span> New Beans</NavLink>
			<NavLink Match=@NavLinkMatch.All href="/roasters" class="text-crema side-nav-link px-2"><span class="bi bi-people pe-1"></span> Roasters</NavLink>
		}
	</div>
</div>

<style>
	
</style>

@code {
	private EnviromentSettings.Enviroment curEnviroment = EnviromentSettings.Enviroment.PRODUCTION;

	protected override void OnInitialized()
	{
		curEnviroment = envSettings.GetEnviroment(config);
	}
}
